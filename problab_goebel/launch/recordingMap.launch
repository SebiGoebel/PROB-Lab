<?xml version="1.0" ?>
<launch>
    <!-- Create gazebo world -->
    <include file="$(find gazebo_ros)launch/empty_world.launch" >
        <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_house.world" />
        <arg name="gui" value="true" />
        <arg name="use_sim_time" value="true" />
        <arg name="paused" value="false" />
    </include>
    
    <!-- spawning turtlebot -->
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_burger_for_autorace.urdf.xacro" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_burger -x 0.5 -y 0.5 -z 0 -Y 0 -param robot_description" />

	<include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch"/>

    <!-- running rviz -->
    <node pkg="rviz" name="rviz" type="rviz"/>

    <!-- für das erstellen einer Map mit SLAM (mit Befehl): 
        rosrun gmapping slam_gmapping
        -> Map größe: 4000 x 4000 
    -->

    <!-- für das erstellen einer Map mit SLAM  -->
    <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
        <param name="xmin" value="-8.0"/>
        <param name="ymin" value="-6.0"/>
        <param name="xmax" value="8.0"/>
        <param name="ymax" value="6.0"/>
        <!--<param name="delta" value="0.01"/>-->
    </node>

    <!-- Teleop Befehl um den Roboter mit der Tastatur zu steuern:
        roslaunch turtlebot3_teleop turtlebot3_teleop_key.launch
    -->

    <!-- Wenn die Karte fertig ist -> Speichern der Map:
        rosrun map_server map_saver -f <dateiname>

        zum Beispiel:
        rosrun map_server map_saver -f map
    -->

</launch>
