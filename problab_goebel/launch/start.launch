    <include file="$(find problab_goebel)/launch/move_base.launch"/>

    <!-- <node type="rviz" name="rviz" pkg="rviz"/> -->
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find problab_goebel)/config/rviz_config.rviz"/>

    <!-- übergeben der hyperparameter aus dem .yaml -->
    <rosparam file="$(find problab_goebel)/param/hyperparameter.yaml" />

    <!-- eigener particle filter -->
    <node type="particle_filter" name="particle_filter" pkg="problab_goebel" />

    
