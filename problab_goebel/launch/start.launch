<?xml version="1.0" ?>
<launch>
    <!-- Create gazebo world -->
    <include file="$(find gazebo_ros)launch/empty_world.launch" >
        <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_house.world" />
        <arg name="gui" value="false" />
        <arg name="use_sim_time" value="true" />
        <arg name="paused" value="false" />
    </include>
    
    <!-- spawning turtlebot -->
    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_burger_for_autorace.urdf.xacro" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" args="-urdf -model turtlebot3_burger -x 0.5 -y 0.5 -z 0 -Y 0 -param robot_description" />

	<include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch"/>

    <!-- laden der aufgenommenen map in rviz -->
    <!--<node pkg="map_server" name="map_server" type="map_server" args="$(find problab_goebel)/maps/mymap.yaml"/>-->
    <node pkg="map_server" name="map_server" type="map_server" args="$(find problab_goebel)/maps/kleineMap.yaml"/>

    <!-- laden des roboters in die map-->
    <!-- laut Doku: http://wiki.ros.org/tf#static_transform_publisher -->
    <!-- static_transform_publisher args: x y z qx qy qz qw frame_id child_frame_id  period_in_ms -->
    <node pkg="tf" type="static_transform_publisher" name="tf_map_odom" args="0 0 0 0 0 0 1 map odom 100"/>

